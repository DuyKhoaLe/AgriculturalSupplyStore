@model IEnumerable<AgriculturalSupplyStore.ViewModels.MenuBoPhanVM>
@{
    ViewData["Title"] = @ViewBag.Name;
}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown " data-wow-delay="0.1s">@ViewBag.Name</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-items_first "><a>Trang Chủ</a></li>
            <li class="breadcrumb-items active text-primary"><a>Phụ Tùng</a></li>
            <li class="breadcrumb-items active text-primary"><a>@ViewBag.Name</a></li>
        </ol>
    </div>
</div>
<!-- Header End -->
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-3 col-lg-3 mb-2">
                    <a class="product-item" asp-controller="HangHoa" asp-action="Phan" asp-route-bophan="@item.MaBoPhan">
                        <img src="~/images/bophan_images/@item.Hinh" class="img-fluid product-thumbnail">
                        <h3 class="product-title">@item.TenBoPhan</h3>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
