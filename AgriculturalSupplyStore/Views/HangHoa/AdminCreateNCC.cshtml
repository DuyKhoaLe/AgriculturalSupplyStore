@model AgriculturalSupplyStore.ViewModels.MenuNCCVM
@{
    ViewData["Title"] = "Thêm nhà cung cấp";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Container Fluid-->
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thêm Nhà Cung Cấp</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Trang Chủ</a></li>
            <li class="breadcrumb-item">Danh Sách Nhà Cung Cấp</li>
            <li class="breadcrumb-item active" aria-current="page">Trang Thêm Nhà Cung Cấp</li>
        </ol>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 ">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Nhập thông tin nhà cung cấp cần thêm</h6>
                </div>
                <div class="card-body">
                    <form asp-action="AdminCreateNCC" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.MaNCC"></label>
                            <input type="text" asp-for="@Model.MaNCC" class="form-control">
                            <span asp-validation-for="@Model.MaNCC" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.TenCongTy"></label>
                            <input asp-for="@Model.TenCongTy" type="text" class="form-control">
                            <span asp-validation-for="@Model.TenCongTy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.NguoiLienLac"></label>
                            <input type="text" asp-for="@Model.NguoiLienLac" class="form-control">
                            <span asp-validation-for="@Model.NguoiLienLac" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input type="email" asp-for="@Model.Email" class="form-control">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.DienThoai"></label>
                            <input type="number" asp-for="@Model.DienThoai" class="form-control">
                            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.DiaChi"></label>
                            <input type="text" asp-for="@Model.DiaChi" class="form-control">
                            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.MoTa"></label>
                            <input type="text" asp-for="@Model.MoTa" class="form-control">
                            <span asp-validation-for="@Model.MoTa" class="text-danger"></span>
                        </div>                      
                        <div class="form-group">
                            <label asp-for="@Model.Logo" class="text-black"></label>
                            <div class="custom-file">
                                <input type="file" name="logo" class="custom-file-input" id="customFile">
                                <label class="custom-file-label">Chọn ảnh</label>
                                <span asp-validation-for="@Model.Logo" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu Thông Tin</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
