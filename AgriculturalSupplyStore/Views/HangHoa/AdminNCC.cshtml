
@{
    ViewData["Title"] = "Danh Sách Nhà Cung Cấp";
}
@model IEnumerable<AgriculturalSupplyStore.ViewModels.MenuNCCVM>
@{
    ViewData["Title"] = "Danh Sách Nhà Cung Cấp";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <!-- Container Fluid-->
    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Danh Sách Nhà Cung Cấp</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Trang Chủ</a></li>
                <li class="breadcrumb-item">Nhà Cung Cấp</li>
                <li class="breadcrumb-item active" aria-current="page">Danh Sách Nhà Cung Cấp</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12 mb-4">
                <!-- Simple Tables -->
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary"><a asp-controller="HangHoa" asp-action="AdminCreateNCC">Thêm Nhà Cung Cấp</a></h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>Stt</th>
                                    <th>Logo</th>
                                    <th>Mã Nhà Cung Cấp</th>
                                    <th>Tên Nhà Cung Cấp</th>                                    
                                    <th>Người Liên Lạc</th>
                                    <th>Tác Vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td><img src="~/images/nhacungcap_images/@item.Logo" alt="@item.TenCongTy" style=" max-width: 100px; max-height: 100px;" /></td>
                                        <td>@item.MaNCC</td>
                                        <td>@item.TenCongTy</td>
                                        <td>@item.NguoiLienLac</td>
                                        <td>
                                            <a asp-action="AdminDetailNCC" asp-route-mancc="@item.MaNCC" class="btn btn-sm btn-primary">Chi tiết</a>
                                            <form asp-action="AdminDeleteNCC" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp @item.TenCongTy?');">
                                                <input type="hidden" name="mancc" value="@item.MaNCC" />
                                                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
        <!--Row-->
    </div>
    <!---Container Fluid-->
</div>


