@model AgriculturalSupplyStore.ViewModels.KhachHangVM
@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin Khách Hàng";
}
<div class="">
    <div class="container-fluid py-5 d-flex align-items-center justify-content-center ">
        <div class="col-md-6 mb-5 mb-md-0">
            <h1 class="h3 mb-3 text-black text-center">Trang Chỉnh Sửa Thông Tin</h1>
            <form asp-controller="KhachHang" asp-action="EditKhachHang"  enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="p-3 p-lg-5 border bg-white">
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.MaKh" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.MaKh" class="form-control">
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.MatKhau" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.MatKhau" type="password" class="form-control">
                            <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.DienThoai" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.DienThoai" class="form-control" >
                            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.DiaChi" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.DiaChi" class="form-control" >
                            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.HoTen" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.HoTen" class="form-control">
                            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.Email" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.Email" class="form-control" >
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.NgaySinh" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.NgaySinh" class="form-control" >
                            <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.Hinh" class="text-black"></label>                   
                            <input asp-for="@Model.Hinh" type="file" name="Hinh" class="form-control">
                            <img src="~/images/khachhang_images/@Model.Hinh" alt="@Model.HoTen" style="width: 100px; height:100px; margin-top:5px; border-radius: 10px;"/>
                            <span asp-validation-for="@Model.Hinh" class="text-danger"></span>                           
                        </div>
                    </div>
                 
                    <div class="form-group mt-2 d-flex align-items-center justify-content-center">
                        <button type="submit" class="btn btn-black btn-lg py-3 btn-block">Lưu Thông Tin</button>
                    </div>                  
                </div>
            </form>
        </div>
    </div>
</div>

