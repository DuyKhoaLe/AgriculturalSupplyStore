@model IEnumerable<AgriculturalSupplyStore.ViewModels.KhachHangVM>
@{
    ViewData["Title"] = "Danh Sách Tài Khoản Khách hàng";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <!-- Container Fluid-->
    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Danh Sách Tài Khoản Khách Hàng</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Trang Chủ</a></li>
                <li class="breadcrumb-item">Khách Hàng</li>
                <li class="breadcrumb-item active" aria-current="page">Danh Sách Tài Khoản</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12 mb-4">
                <!-- Simple Tables -->
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary"><a asp-controller="KhachHang" asp-action="AdminCreateKhachHang">Thêm Khách Hàng</a></h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>Stt</th>
                                    <th>Hình</th>
                                    <th>Mã Khách Hàng</th>
                                    <th>Tên Khách Hàng</th>
                                    <th>Mật Khẩu</th>
                                    <th>Hiệu Lực</th>
                                    <th>Vai Trò</th>
                                    <th>Tác Vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td><img src="~/images/hanghoa_images/@item.Hinh" alt="@item.HoTen" style=" max-width: 100px; max-height: 100px;" /></td>
                                        <td>@item.MaKh</td>
                                        <td>@item.HoTen</td>
                                        <td>@item.MatKhau</td>
                                        <td>@item.HieuLuc</td>
                                        <td>@item.VaiTro</td>
                                        <td>
                                            <a asp-action="AdminDetailKhachHang" asp-route-makh="@item.MaKh" class="btn btn-sm btn-primary">Chi tiết</a>
                                            <form asp-action="AdminDeleteKhachHang" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa khách hàng @item.HoTen?');">
                                                <input type="hidden" name="makh" value="@item.MaKh" />
                                                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
        <!--Row-->
    </div>
    <!---Container Fluid-->
</div>


