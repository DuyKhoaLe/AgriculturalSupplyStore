@model AgriculturalSupplyStore.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký ";
}

<div class="untree_co-section">
    <div class="container-fluid py-5 d-flex align-items-center justify-content-center vh-100">
        <div class="col-md-6 mb-5 mb-md-0">
            <h2 class="h3 mb-3 text-black text-center">Trang Đăng Ký</h2>
            <form asp-controller="KhachHang" asp-action="Register" enctype="multipart/form-data">
                <div class="p-3 p-lg-5 border bg-white">
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.MaKh"  class="text-black"></label>
                            <input asp-for="@Model.MaKh" class="form-control"  >
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.MatKhau" class="text-black"></label>
                            <input asp-for="@Model.MatKhau" class="form-control" >
                            <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.HoTen"  class="text-black"></label>
                            <input asp-for="@Model.HoTen" class="form-control" >
                            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.DiaChi"  class="text-black"></label>
                            <input asp-for="@Model.DiaChi" class="form-control" placeholder="123, Lý Thường Kiệt, An Châu,...">
                            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="@Model.Email"  class="text-black"></label>
                            <input asp-for="@Model.Email" class="form-control">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.DienThoai"  class="text-black"></label>
                            <input asp-for="@Model.DienThoai" class="form-control" placeholder="Số điện thoại">
                            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mt-2">
                            <div class="form-group">
                                <label asp-for="@Model.GioiTinh" class="text-black"><span class="text-danger">*</span></label>
                                <input asp-for="@Model.GioiTinh" class="form-check-input" />
                                <label class="form-check-label" >Nam?</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.NgaySinh"  class="text-black"></label>
                            <input asp-for="@Model.NgaySinh" class="form-control" >
                            <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.Hinh"  class="text-black"></label>
                            <input type="file" name="Hinh" class="form-control">
                            <span asp-validation-for="@Model.Hinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-2 d-flex align-items-center justify-content-center">
                        <button type="submit" class="btn btn-black btn-lg py-3 btn-block">Đăng Ký</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


