@model AgriculturalSupplyStore.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng Nhập";
}
<div class="">
    <div class="container-fluid py-5 d-flex align-items-center justify-content-center ">
        <div class="col-md-6 mb-5 mb-md-0">
            <h1 class="h3 mb-3 text-black text-center">Trang Đăng Nhập</h1>
            <form asp-controller="KhachHang" asp-action="Login" asp-all-route-returnurl="@ViewBag.ReturnUrl" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="p-3 p-lg-5 border bg-white">
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.UserName" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.UserName" class="form-control" id="c_companyname">
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.Password" for="c_companyname" class="text-black"></label>
                            <input asp-for="@Model.Password" class="form-control" id="c_companyname">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-5 d-flex align-items-center justify-content-center">
                        <button type="submit" class="btn btn-black btn-lg py-3 btn-block">Đăng Nhập</button>
                    </div>                   
                    <div class="text-center">
                        <a asp-controller="KhachHang" asp-action="Register" class="font-weight-bold small">Chưa có tài khoản ?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

