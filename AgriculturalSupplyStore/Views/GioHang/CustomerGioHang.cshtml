@model IEnumerable<AgriculturalSupplyStore.ViewModels.HoaDonVM>
@{
    ViewData["Title"] = "Đơn hàng của bạn";
}
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown " data-wow-delay="0.1s">Giỏ Hàng</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-items_first "><a>Trang Chủ</a></li>
            <li class="breadcrumb-items active text-primary"><a>Giỏ Hàng</a></li>
            <li class="breadcrumb-items active text-primary"><a>Hóa Đơn Của Bạn</a></li>
        </ol>
    </div>
</div>
<div class="container mt-5">
    @foreach (var item in Model)
    {
        <div class="container">
            <a  asp-action="CustomerCTHD" asp-route-id="@item.MaHd" class="text-decoration-none text-dark">
                <div class="card shadow-lg p-3 mt-1 bg-white rounded" style="max-width: 100%;">
                    <div class="row g-0">


                        <div class="col-md-1 d-flex align-items-center justify-content-center">
                            <img src="~/images/hanghoa_images/@item.Hinh" class="img-fluid rounded" style="width: 100px; height: 100px; object-fit: cover;">
                        </div>


                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title font-weight-bold text-primary">Mã hóa đơn: @item.MaHd</h5>
                                <p class="mb-1">Số lượng sản phẩm: <small class="text-muted"></small>@item.SoHh</p>
                                <p class="mb-1">Ngày đặt: <small class="text-muted">@item.NgayDat.</small></p>
                            </div>
                        </div>
                        <div class="col-md-5 px-3 d-flex align-items-center justify-content-end">
                            <span class="badge bg-warning text-dark ten-trang-thai me-2">@item.TenTrangThai</span>
                            <button type="button"
                                    style="background-color: red; color: white; font-size: 1rem; font-weight: bold; text-transform: uppercase; padding: 8px 15px; border: none; border-radius: 5px; cursor: pointer; box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);"
                                    onclick="alert('Hủy đơn hàng!')">
                                Hủy
                            </button>
                        </div>

                    </div>
                </div>
            </a>
        </div>
    }

</div>
