@model IEnumerable<AgriculturalSupplyStore.ViewModels.ChiTietHDVM>
@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <!-- Container Fluid-->
    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Chi Tiết Hóa Đơn</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Trang Chủ</a></li>
                <li class="breadcrumb-item">Hóa Đơn</li>
                <li class="breadcrumb-item active" aria-current="page">Chi Tiết Hóa Đơn</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12 mb-4">
                <!-- Simple Tables -->
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    </div>
                    <div class="table-responsive" style="">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>Stt</th>
                                    <th class="product-thumbnail">Mã chi tiết </th>
                                    <th class="product-name">Mã hóa đơn</th>
                                    <th class="product-thumbnail">Hình ảnh</th>
                                    <th class="product-name">Tên hàng hóa</th>
                                    <th class="product-price">Giá</th>
                                    <th class="product-quantity">Số lượng</th>
                                    <th class="product-quantity">Giảm giá</th>
                                    <th class="product-total">Thành Tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@item.MaCt</h2>
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@item.MaHd</h2>
                                        </td>
                                        <td class="product-thumbnail">
                                            <img src="~/images/hanghoa_images/@item.Hinh" alt="@item.TenHh" style=" max-width: 50px; max-height: 100px;" class="img-fluid rounded shadow-sm">
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@item.TenHh (@item.MaHh)</h2>
                                        </td>
                                        <td>@item.DonGia.ToString("#,##0.000")₫</td>
                                        <td>
                                            @item.SoLuong
                                        </td>
                                        <td>@item.ThanhTien.ToString("#,##0.000")₫</td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                        </table>                  
                    </div>
                    <div class="card-footer"></div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-6 ">
                    </div>
                    <div class="col-md-6 ml-auto  ">
                        <div class="row justify-content-end">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-12 text-center border-bottom mb-5">
                                        <h3 class="text-black h4 text-uppercase">Tổng Cộng</h3>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <span class="text-black">Số tiền:</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-black">@Model.Sum(p => p.ThanhTien).ToString("#,##0.000")₫</strong>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <span class="text-black">Phí:</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-black">Miễn phí vận chuyển trong nước</strong>
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-md-6">
                                        <span class="text-black">Tổng tiền:</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-black">@Model.Sum(p => p.ThanhTien).ToString("#,##0.000")₫</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Row-->
    </div>
    <!---Container Fluid-->
</div>


