@model IEnumerable<AgriculturalSupplyStore.ViewModels.GioHangHHVM>
@{
    ViewData["Title"] = "Giỏ Hàng";
}
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown " data-wow-delay="0.1s">Giỏ Hàng Của Bạn</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-items_first "><a>Trang Chủ</a></li>
            <li class="breadcrumb-items active text-primary"><a>Giỏ Hàng</a></li>
        </ol>
    </div>
</div>
<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Stt</th>
                                <th class="product-thumbnail">Hình ảnh</th>
                                <th class="product-name">Tên</th>
                                <th class="product-price">Giá</th>
                                <th class="product-quantity">Số lượng</th>
                                <th class="product-total">Tổng Tiền</th>
                                <th class="product-remove"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int stt = 1;
                            }
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td class="product-thumbnail">
                                        <img src="~/images/hanghoa_images/@item.Hinh" alt="@item.TenHh" class="img-fluid"/>
                                    </td>
                                    <td class="product-name">
                                        <h2 class="h5 text-black">@item.TenHh</h2>
                                    </td>
                                    <td>@item.DonGia.ToString("#,##0.000")₫</td>
                                    <td>
                                        <div class="input-group mb-3 d-flex align-items-center quantity-container" style="max-width: 120px;">
                                            <div class="input-group-prepend">
                                                <button class="btn btn-outline-black decrease" type="button">&minus;</button>
                                            </div>
                                            <input type="text" class="form-control text-center quantity-amount" value="@item.SoLuong" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-black increase" type="button">&plus;</button>
                                            </div>
                                        </div>

                                    </td>
                                    <td>@item.ThanhTien.ToString("#,##0.000")₫</td>
                                    <td><a asp-action="RemoveCart" asp-controller="GioHang" asp-route-id="@item.MaHh" class="fa fa-trash "></a></td>
                                </tr>
                                stt++;
                            }
                                                     
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-md-6">
             
            </div>
            <div class="col-md-6 pl-5">
                <div class="row justify-content-end">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-12 text-right border-bottom mb-5">
                                <h3 class="text-black h4 text-uppercase">Tổng Cộng</h3>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <span class="text-black">Số tiền:</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">@Model.Sum(p => p.ThanhTien).ToString("#,##0.000")₫</strong>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <span class="text-black">Phí:</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">Miễn phí vận chuyển trong nước</strong>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <span class="text-black">Tổng tiền:</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">@Model.Sum(p => p.ThanhTien).ToString("#,##0.000")₫</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <a  class="btn btn-black btn-lg py-3 btn-block"  asp-action="Checkout">Đặt Hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>